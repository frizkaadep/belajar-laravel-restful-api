                                                        "description": "Country name"
                                                    },
                                                    "postal_Code": {
                                                        "type": "string",
                                                        "description": "Postal or ZIP code"
                                                    }
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request, invalid input"
                    },
                    "401": {
                        "description": "Unauthorized, invalid or missing token"
                    },
                    "404": {
                        "description": "Contact not found"
                    }
                }
            }
        },
